{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Coverage Report",
      "type": "shell",
      "command": "coverage report --data-file=${workspaceFolder}/platform_root/platform_api/.coverage",
      "problemMatcher": []
    },
    {
      "label": "Unittest Container Up - mariadb",
      "type": "shell",
      "command": "${workspaceFolder}/platform_root/platform_api/tests/docker-compose-up-mariadb.sh",
      "problemMatcher": []
    },
    {
      "label": "Unittest Container Up - mysql",
      "type": "shell",
      "command": "${workspaceFolder}/platform_root/platform_api/tests/docker-compose-up-mysql.sh",
      "problemMatcher": []
    },
    {
      "label": "Auto Debug Satrt - platform-api",
      "type": "shell",
      "command": "${command:workbench.action.debug.start}",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOn": [
        "httpd-stop"
      ],
      "problemMatcher": []
    },
    {
      "label": "httpd-stop",
      "type": "shell",
      "command": "while [ $(sudo docker inspect devcontainer-ita-migration-1 | jq -r '.[0].State.Status') != 'exited' ]; do echo 'Wait until devcontainer-ita-migration-1 is exited.'; sleep 5; done; httpd -k stop",
      "problemMatcher": []
    },
  ]
}
